{
	"env" : {
		"node"    : true,
		"browser" : true,
		"amd"     : true,
		"mocha"   : true
	},

	"globals": {
		"angular": true
	},

	"rules": {

		// Best Practices
		"complexity"            : [ 1, 10 ],
		"consistent-return"     : 2,
		"curly"                 : [ 2, "all" ],
		"dot-notation"          : 2,
		"eqeqeq"                : 2,
		"no-alert"              : 2,
		"no-else-return"        : 2,
		"no-eq-null"            : 2,
		"no-eval"               : 2,
		"no-extend-native"      : 2,
		"no-floating-decimal"   : 2,
		"no-implied-eval"       : 2,
		"no-labels"             : 2,
		"no-lone-blocks"        : 2,
		"no-loop-func"          : 2,
		"no-multi-spaces"       : 0,
		"no-native-reassign"    : 2,
		"no-new"                : 2,
		"no-new-func"           : 2,
		"no-proto"              : 2,
		"no-redeclare"          : 2,
		"no-return-assign"      : 2,
		"no-script-url"         : 2,
		"no-self-compare"       : 2,
		"no-unused-expressions" : 0,
		"no-with"               : 2,
		"yoda"                  : [ 2, "never" ],

		// Strict Mode
		"no-extra-strict" : 2,
		"strict"          : 2,

		// Variables
		"no-catch-shadow"            : 2,
		"no-shadow"                  : 2,
		"no-shadow-restricted-names" : 2,
		"no-undef"                   : 2,
		"no-undef-init"              : 2,
		"no-unused-vars"             : 0,
		"no-use-before-define"       : 2,

		// Node.js
		"handle-callback-err" : 2,
		"no-mixed-requires"   : [ 2, true ],
		"no-path-concat"      : 2,
		"no-process-exit"     : 2,

		// Stylistic Issues
		"brace-style"             : [ 2, "1tbs" ],
		"camelcase"               : 2,
		"consistent-this"         : [ 0, "self" ],
		"func-names"              : 0,
		"key-spacing"             : [ 2 , { "beforeColon" : true, "afterColon" : true, "align" : "colon" } ],
		"max-nested-callbacks"    : [ 1, 4 ],
		"new-cap"                 : 2,
		"new-parens"              : 2,
		"no-array-constructor"    : 2,
		"no-nested-ternary"       : 2,
		"no-new-object"           : 2,
		"no-space-before-semi"    : 2,
		"no-spaced-func"          : 2,
		"no-ternary"              : 2,
		"no-underscore-dangle"    : 0,
		"no-wrap-func"            : 2,
		"one-var"                 : 0,
		"quote-props"             : 2,
		"quotes"                  : [ 2, "single", "avoid-escape" ],
		"semi"                    : 2,
		"space-in-brackets"       : [ 1, "always" ],
		"space-infix-ops"         : 2,
		"space-return-throw-case" : 2,
		"space-unary-ops"         : [ 2, { "words": true, "nonwords": false } ]
	}
}
